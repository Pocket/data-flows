{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown",
      "dom"
    ],
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
